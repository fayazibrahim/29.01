using System;

namespace 1
{
    internal class Program
     {
        static void Main(string[] args)
        {
        

            Console.WriteLine("Ededi daxil et");
            string input = Console.ReadLine();
            int num  = Convert.ToInt32(input);

            int sum = 0;

            while (num != 0)
            {
                int n = num % 10;
                num = num / 10;
                sum = sum + n;
            }
            Console.WriteLine(sum);

        }
    }
}